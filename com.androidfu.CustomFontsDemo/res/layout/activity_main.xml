<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/com.androidfu.customfontdemo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/kung_fu_droid" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- Regular font, nothing special -->
        <com.androidfu.customfontdemo.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

        <!-- Regular font, bold -->
        <com.androidfu.customfontdemo.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Regular font, italic via styles -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/italic_for_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

        <!-- Custom font applied directly to field -->
        <com.androidfu.customfontdemo.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            custom:font="fonts/FFF_Tusj.ttf" />

        <!-- Custom font applied via style -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_fff_tusj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

        <!-- Custom font and textStyle applied via style -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_fff_tusj_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

        <!-- Custom font with textStyle applied to field -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_fff_tusj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            android:textStyle="italic" />

        <!-- Custom font applied directly to field -->
        <com.androidfu.customfontdemo.views.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            custom:font="fonts/BPdots.otf" />

        <!-- Custom font and size applied via style -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/neo_retro_draw_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world" />

        <!-- Custom font applied directly to field with textStyle applied via style -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/italic_for_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            custom:font="fonts/BPdots.otf" />
        
        <!-- Custom font, light typeface -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_neo_retro_draw_sans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

        <!-- Custom font bolded for comparison to font's strong typeface -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_neo_retro_draw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp"
            android:textStyle="bold" />
        
        <!-- Custom font, strong typeface - compare to bold above -->
        <com.androidfu.customfontdemo.views.CustomTextView
            style="@style/font_neo_retro_draw_strong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello_world"
            android:textSize="36sp" />

    </LinearLayout>

</ScrollView>